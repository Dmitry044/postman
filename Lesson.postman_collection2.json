		{
			"name": "New_User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"pm.environment.set(\"email\", jsonData.email);",
							"pm.environment.set(\"userId\", jsonData.id);",
							"",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Body matches string\", function () {",
							"    pm.expect(pm.response.text()).to.include(\"id\");",
							"});",
							"",
							"// Получаем значение поля firstName из ответа",
							"const firstName = pm.response.json().firstName;",
							"",
							"// Функция для проверки наличия цифр в строке",
							"function hasDigits(inputString) {",
							"  return /\\d/.test(inputString);",
							"}",
							"",
							"// Проверяем, содержит ли значение поля firstName цифры",
							"pm.test(\"Поле firstName не должно содержать цифры\", function () {",
							"  pm.expect(hasDigits(firstName)).to.be.false;",
							"});",
							"",
							"",
							"",
							"",
							"// Функция для проверки наличия недопустимых символов в строке",
							"function hasInvalidCharacters(inputString) {",
							"  // Здесь используется регулярное выражение, которое проверяет, есть ли в строке только буквы, дефис и пробелы.",
							"  return !/^[a-zA-Z\\s\\-]+$/.test(inputString);",
							"}",
							"",
							"// Проверяем, содержит ли значение поля firstName недопустимые символы",
							"pm.test(\"Поле firstName не должно содержать недопустимые символы\", function () {",
							"  pm.expect(hasInvalidCharacters(firstName)).to.be.false;",
							"});",
							"",
							"/*",
							"// Получаем значение поля email из ответа",
							"const email = pm.response.json().email;",
							"",
							"// Функция для проверки наличия домена \"gmail\" в email",
							"function hasGmailDomain(inputEmail) {",
							"  return /@gmail\\.com$/.test(inputEmail);",
							"}",
							"",
							"// Проверяем, содержит ли значение поля email домен \"gmail\"",
							"pm.test(\"Поле email должно содержать домен 'gmail'\", function () {",
							"  pm.expect(hasGmailDomain(email)).to.be.true;",
							"});",
							"*/",
							"",
							"",
							"// Получаем значение поля phone из ответа",
							"const phone = pm.response.json().phone;",
							"",
							"// Функция для проверки, соответствует ли телефон требованиям",
							"function isValidPhoneNumber(inputPhone) {",
							"  return /^\\+375\\d{7}$/.test(inputPhone);",
							"}",
							"",
							"// Проверяем, соответствует ли значение поля phone требованиям",
							"pm.test(\"Телефон должен начинаться с кода страны '+375' и содержать 7 цифр\", function () {",
							"  pm.expect(isValidPhoneNumber(phone)).to.be.true;",
							"});",
							"",
							"",
							""
						],
						"type": "text/javascript"
					}
				}
			],
